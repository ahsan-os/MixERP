@using Frapid.WebsiteBuilder
@{
    ViewBag.Title = @Resources.EditLayout;
    Layout = ViewBag.Layout;
}
<link rel="stylesheet" href="/scripts/vakata-jstree/dist/themes/default/style.min.css" />
<script src="/scripts/vakata-jstree/dist/jstree.min.js"></script>
<script src="/scripts/ace-1.2.2/src-min-noconflict/ace.js"></script>
<script src="/scripts/ajax-file-upload.js"></script>
<link href="/Areas/Frapid.WebsiteBuilder/styles/layout/index.css" rel="stylesheet">
<script src="/scripts/less/less.min.js"></script>

<div class="ui stackable divided grid" style="height: 100%;">
    <div class="thirteen wide full height column attached segment" data-target="editor" id="ActionContainer" style="display: none;">
        <div class="action buttons">
            <div class="ui stackable grid">
                <div class="twelve wide column">
                    <div class="ui basic icon buttons">
                        <button class="ui basic button" data-container="" data-path="" id="SaveButton" style="display: none;">
                            <i class="save icon"></i>
                            @Resources.Save
                        </button>
                        <button class="ui basic button" id="UploadButton" data-container="">
                            <i class="upload icon"></i>
                            @Resources.Upload
                        </button>
                        <button class="ui basic button" onclick="$('#FileModal').modal('show');" data-container="" id="CreateFileButton">
                            <i class="file icon"></i>
                            @Resources.CreateFile
                        </button>
                        <button class="ui basic button" onclick="$('#FolderModal').modal('show');" data-container="" id="CreateDirectoryButton">
                            <i class="folder icon"></i>
                            @Resources.CreateFolder
                        </button>
                        <button class="ui basic button" data-path="" onclick="deleteItem(this);" id="DeleteButton">
                            <i class="minus square icon"></i>
                            @Resources.Delete
                        </button>

                        <button class="ui basic button" onclick="toggleEditorTheme()">
                            <i class="unhide icon"></i>
                            @Resources.ChangeContrast
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <div id="viewer" class="ui attached segment">
            <img class="ui image" />
        </div>
        <div>
            <div id="editor" style="display: none;">
            </div>
        </div>
    </div>
    <div class="ui three wide full height right floated column attached segment" style="overflow: auto;">
        <div class="ui header">
            @Resources.EditLayoutFiles
        </div>
        <div class="ui divider"></div>
        <div class="theme container vpad8">
            <div class="ui form">
                <div class="field">
                    <label>@Resources.SelectTheme</label>
                    <select class="ui theme list dropdown" id="ThemeDropdown"></select>
                </div>
                <div class="vpad8">
                    <button class="ui fluid violet button" id="LoadButton">@Resources.Load</button>
                </div>
                <div class="vpad8">
                    <button class="ui fluid basic violet button" id="CreateThemeButton" onclick="displayNewThemeModal();">@Resources.CreateTheme</button>
                </div>
                <div class="vpad8">
                    <button class="ui fluid basic red button" onclick="displayDeleteThemeModal();">@Resources.DeleteTheme</button>
                </div>
            </div>
        </div>
        <div class="tree container vpad8" style="display: none;">
            <div class="ui violet medium ribbon label">
                <span data-theme=""></span>
            </div>
            <div id="container" class="vpad8"></div>
            <div class="vpad8">
                <button class="ui fluid negative button" id="CloseButton">@Resources.Close</button>
            </div>
        </div>

    </div>
</div>

@Html.Partial("~/Areas/Frapid.WebsiteBuilder/Views/Backend/Layout/Shared/UploadModal.cshtml")
@Html.Partial("~/Areas/Frapid.WebsiteBuilder/Views/Backend/Layout/Shared/FileModal.cshtml")
@Html.Partial("~/Areas/Frapid.WebsiteBuilder/Views/Backend/Layout/Shared/FolderModal.cshtml")
@Html.Partial("~/Areas/Frapid.WebsiteBuilder/Views/Backend/Layout/Shared/NewThemeModal.cshtml")
@Html.Partial("~/Areas/Frapid.WebsiteBuilder/Views/Backend/Layout/Shared/DeleteThemeModal.cshtml")


<script src="/Areas/Frapid.WebsiteBuilder/scripts/layout/index.js"></script>